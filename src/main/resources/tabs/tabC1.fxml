<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.CheckListView?>

<VBox prefHeight="600.0" prefWidth="725.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="comp3111.covid.tabs.TabC1pageController">
   <AnchorPane prefHeight="600.0" prefWidth="725.0">
      <children>
         <CheckListView fx:id="locationsCheckboxList" layoutX="14.0" layoutY="43.0" prefHeight="550" prefWidth="190.0" />
         <Label layoutX="21.0" layoutY="14.0" text="Select target Countries" />
         <Button fx:id="confirmButton" layoutX="398.0" layoutY="9.0" mnemonicParsing="false" onAction="#handleConfirmSelection" text="Confirm Selection" />
         <DatePicker fx:id="datePicker" layoutX="197.0" layoutY="11.0" onAction="#selectTargetDate" promptText="Select Date" />
         <TableView fx:id="dataTable" layoutX="214.0" layoutY="60" prefHeight="500" prefWidth="550.0">
           <columns>
             <TableColumn fx:id="countryCol" prefWidth="150" text="Countries" />
             <TableColumn fx:id="totalCol" prefWidth="250" text="Fully Vaccinated" />
               <TableColumn fx:id="rateCol" prefWidth="150" text="Vaccination Rate" />
           </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
         <Label fx:id="tableTitlelbl" layoutX="214.0" layoutY="37.5" text="Please choose a country and a date">
            <font>
               <Font name="System Bold" size="16.0" />
            </font>
         </Label>
      </children>
   </AnchorPane>
</VBox>
